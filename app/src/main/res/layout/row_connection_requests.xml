<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        >

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="@dimen/rounded_image_height_width"
            android:layout_height="@dimen/rounded_image_height_width"
            android:padding="3dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_profile"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_alignTop="@+id/image_profile"
            android:text=""
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/img_msg_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_below="@+id/tv_name"
            android:src="@drawable/msg_icon_small"
            />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/img_msg_icon"
            android:layout_below="@+id/tv_name"
            android:layout_alignBottom="@+id/img_msg_icon"
            android:layout_alignTop="@+id/img_msg_icon"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/small_text_size"
            android:textStyle="normal"/>

        <ImageView
            android:id="@+id/btn_accept"
            android:layout_width="@dimen/accept_btn_width"
            android:layout_height="@dimen/accept_btn_height"
            android:layout_below="@+id/tv_location"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_marginTop="@dimen/margin_10"
            android:src="@drawable/accept_btn"/>

        <ImageView
            android:id="@+id/btn_reject"
            android:layout_width="@dimen/accept_btn_width"
            android:layout_height="@dimen/accept_btn_height"
            android:layout_below="@+id/tv_location"
            android:layout_toRightOf="@+id/btn_accept"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/margin_10"
            android:src="@drawable/reject_btn"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_below="@+id/btn_accept"

            />
    </RelativeLayout>



</LinearLayout>