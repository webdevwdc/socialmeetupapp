<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/rel_parent1"
            android:layout_width="@dimen/rounded_image_height_width"
            android:layout_height="@dimen/rounded_image_height_width"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp">

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="@dimen/rounded_image_height_width"
                android:layout_height="@dimen/rounded_image_height_width"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/txt_reqst_counter"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="10"
                android:layout_alignParentRight="true"
                android:gravity="center|center_vertical"
                android:visibility="visible"
                android:layout_marginLeft="3dp"
                android:background="@drawable/rounded_red"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rel_parent1"
            android:layout_centerVertical="true"
            android:background="@drawable/grytalk">

            <ImageView
                android:id="@+id/img_msg"
                android:layout_width="@dimen/small_icon_height_width"
                android:layout_height="@dimen/small_icon_height_width"
                android:layout_toRightOf="@+id/img_profile_pic"
                android:layout_below="@+id/txt_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/txt_date"
                android:src="@drawable/calendar_icon"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Kenan Demren"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/img_msg"
                android:layout_alignBottom="@+id/img_msg"
                />

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="04.20.2017"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/img_watch"
                android:layout_alignTop="@+id/img_msg"
                android:layout_alignBottom="@+id/img_msg"
                />

            <ImageView
                android:id="@+id/img_watch"
                android:layout_width="@dimen/small_icon_height_width"
                android:layout_height="@dimen/small_icon_height_width"
                android:layout_toLeftOf="@+id/txt_time"
                android:layout_alignTop="@+id/img_msg"
                android:layout_marginLeft="15dp"
                android:layout_alignBottom="@+id/img_msg"
                android:visibility="gone"
                android:src="@drawable/watch_icon"/>

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:12 PM"
                android:textSize="@dimen/small_text_size"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:layout_alignTop="@+id/img_msg"
                android:layout_alignBottom="@+id/img_msg"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_alignParentEnd="true"/>



            <TextView
                android:id="@+id/txt_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deerfield Beach/Istambul"
                android:layout_toRightOf="@+id/message"
                android:layout_below="@+id/txt_user_name"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/medium_text_size"
                android:layout_marginLeft="5dp"
                />


            <!-- <ImageView
                 android:layout_width="35dp"
                 android:layout_height="35dp"
                 android:src="@drawable/msg_icon_big"
                 android:layout_marginRight="30dp"
                 android:layout_centerVertical="true"
                 android:layout_alignParentRight="true"
                 />-->

        </RelativeLayout>



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rel_parent"
        android:layout_marginTop="5dp"
        android:background="#ccc"/>

</RelativeLayout>